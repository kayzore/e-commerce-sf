{% extends 'KayPlatformBundle::layout.html.twig' %}

{% block body %}
    <h1>Courses list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Introduction</th>
                <th>Tags</th>
                <th>Createdat</th>
                <th>Imagename</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td><a href="{{ path('courses_show', { 'id': course.id }) }}">{{ course.title }}</a></td>
                <td>{{ course.introduction }}</td>
                <td>
                    {% for tag in course.tags %}
                        <a href="{{ path('courses_index') }}?tag={{ tag }}">{{ tag }}</a>
                    {% endfor %}
                </td>
                <td>{% if course.createdAt %}{{ course.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ course.imageName }}</td>
                <td>{{ course.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('courses_show', { 'id': course.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('courses_edit', { 'id': course.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('courses_new') }}">Create a new course</a>
        </li>
    </ul>
{% endblock %}
